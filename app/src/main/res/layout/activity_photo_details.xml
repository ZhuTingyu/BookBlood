<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_z"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/llRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                        <android.support.constraint.Guideline

                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.2" />
                        <android.support.constraint.Guideline
                            android:id="@+id/guideline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.75" />

                        <com.base.widget.photoview.PhotoView

                            android:id="@+id/preview_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="@+id/guideline6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0"
                            />
                        <TextView
                            android:id="@+id/bfbfbf"
                            android:background="@drawable/photobackground"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toTopOf="@+id/guideline2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="15dp"
                            android:orientation="horizontal">
                        </TextView>
                        <TextView
                            android:id="@+id/tvColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333333"
                            android:textSize="15sp"
                            app:layout_constraintVertical_bias="0.8"
                            app:layout_constraintHorizontal_bias="0.3"
                            app:layout_constraintBottom_toBottomOf="@+id/bfbfbf"
                            app:layout_constraintLeft_toLeftOf="@+id/bfbfbf"
                            app:layout_constraintRight_toRightOf="@+id/bfbfbf"
                            app:layout_constraintTop_toTopOf="@+id/bfbfbf" />
                        <TextView
                            android:id="@+id/tvtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:textColor="@color/color_333333"
                            android:textSize="15sp"
                            app:layout_constraintHorizontal_bias="0.7"
                            app:layout_constraintVertical_bias="0.8"
                            app:layout_constraintBottom_toBottomOf="@+id/bfbfbf"
                            app:layout_constraintLeft_toLeftOf="@+id/bfbfbf"
                            app:layout_constraintRight_toRightOf="@+id/bfbfbf"
                            app:layout_constraintTop_toTopOf="@+id/bfbfbf" />
                        <TextView
                            android:id="@+id/tvNumberAndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="足环号和时间"
                            android:textColor="@color/color_0080FF"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="@+id/bfbfbf"
                            app:layout_constraintLeft_toLeftOf="@+id/bfbfbf"
                            app:layout_constraintRight_toRightOf="@+id/bfbfbf"
                            app:layout_constraintTop_toTopOf="@+id/bfbfbf"
                            app:layout_constraintVertical_bias="0.25" />

                </android.support.constraint.ConstraintLayout>

        </RelativeLayout>

</LinearLayout>
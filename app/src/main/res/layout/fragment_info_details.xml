<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fadingEdge="none"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:paddingLeft="@dimen/spacing_left_reight"
    android:paddingRight="@dimen/spacing_left_reight"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--鸽舍信息-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_loft_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="鸽舍信息"
            app:lineInputView_RightString="" />


        <!--账户安全-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_account_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="账户安全"
            app:lineInputView_RightString="" />


        <!--分享天下鸽谱-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_share_txgp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="分享天下鸽谱"
            app:lineInputView_RightString="" />


        <!--账户余额-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_account_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="账户余额"
            app:lineInputView_RightString="" />

        <!--续费-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_renewal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="续费"
            app:lineInputView_RightString="" />


        <!--我的鸽币-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_my_gebi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="我的鸽币"
            app:lineInputView_RightString="" />


        <!--我的订单-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="我的订单"
            app:lineInputView_RightString="" />


        <!--关于我们-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="关于我们"
            app:lineInputView_RightString="" />


        <!--设置-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_my_balance"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="设置"
            app:lineInputView_RightString="" />


        <!--意见反馈-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="意见反馈"
            app:lineInputView_RightString="" />


        <!--使用帮助-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_use_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_my_balance"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="使用帮助"
            app:lineInputView_RightString="" />


        <!--操作日志-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_logbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_my_balance"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="操作日志"
            app:lineInputView_RightString="" />


        <!--公告通知-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_announcement_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_my_balance"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="公告通知"
            app:lineInputView_RightString="" />

        <!--鸽友消息-->
        <com.cpigeon.book.widget.LineInputView
            android:id="@+id/ll_pigeon_friend_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineInputView_DrawableLeft="@mipmap/info_anquan"
            app:lineInputView_IsCanEdit="false"
            app:lineInputView_IsLookState="true"
            app:lineInputView_IsNotNull="true"
            app:lineInputView_LeftString="鸽友消息"

<?xml version="1.0" encoding="utf-8"?><!--设置页-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_left_reight"
    android:paddingRight="@dimen/spacing_left_reight">


    <!--清除缓存-->
    <com.cpigeon.book.widget.LineInputView
        android:id="@+id/ll_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineInputView_IsCanEdit="false"
        app:lineInputView_IsLookState="true"
        app:lineInputView_IsNotNull="true"
        app:lineInputView_LeftString="清除缓存"
        app:lineInputView_RightString="" />


    <!--应用评分-->
    <com.cpigeon.book.widget.LineInputView
        android:id="@+id/ll_applied_scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineInputView_IsCanEdit="false"
        app:lineInputView_IsLookState="true"
        app:lineInputView_IsNotNull="true"
        app:lineInputView_LeftString="应用评分"
        app:lineInputView_RightString="" />


    <!--当前版本-->
    <com.cpigeon.book.widget.LineInputView
        android:id="@+id/ll_current_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineInputView_IsCanEdit="false"
        app:lineInputView_IsLookState="true"
        app:lineInputView_IsNotNull="true"
        app:lineInputView_LeftString="当前版本"
        app:lineInputView_RightString="" />


    <!--推送设置-->
    <com.cpigeon.book.widget.LineInputView
        android:id="@+id/ll_push_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineInputView_IsCanEdit="false"
        app:lineInputView_IsLookState="true"
        app:lineInputView_IsNotNull="true"
        app:lineInputView_LeftString="推送设置"
        app:lineInputView_RightString=""
        app:lineInputView_isShowLineDivisions="gone" />


    <TextView
        android:id="@+id/out_login"
        style="@style/bottom_style"
        android:layout_marginTop="50dp"
        android:text="退出登录" />


</LinearLayout>

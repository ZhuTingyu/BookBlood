<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="@dimen/spacing_left_reight"
    android:layout_marginRight="@dimen/spacing_left_reight"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_view_height"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hint_foot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-22-1223323"
            android:textColor="@color/general_text_color"
            android:textSize="@dimen/medium_text_size" />

        <ImageView
            android:id="@+id/img_hint_sex"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:src="@mipmap/ic_sex_no" />

    </LinearLayout>


</android.support.v7.widget.CardView>

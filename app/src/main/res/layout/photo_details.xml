<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.luck.picture.lib.widget.PreviewViewPager
        android:id="@+id/photo_details_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.base.widget.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator3"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="45dp" />
</LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/photo_ll"
        >

        <LinearLayout

            android:background="@drawable/phototab"
            android:layout_width="48dp"
            android:layout_height="288dp"
            android:orientation="vertical">

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/sTvShare"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:simpleTitleView_PressTextColor="@color/white"
                app:simpleTitleView_DefaultTextColor="@color/white"
                app:simpleTitleView_image="@mipmap/ic_photo_details_share"
                app:simpleTitleView_text="@string/text_share" />


            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/sTvMove"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:simpleTitleView_PressTextColor="@color/white"
                app:simpleTitleView_DefaultTextColor="@color/white"
                app:simpleTitleView_image="@mipmap/ic_photo_details_move"
                app:simpleTitleView_text="@string/text_move" />

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/sTvSetFace"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:simpleTitleView_PressTextColor="@color/white"
                app:simpleTitleView_DefaultTextColor="@color/white"
                app:simpleTitleView_image="@mipmap/ic_photo_details_set_face"
                app:simpleTitleView_text="@string/text_set_face" />

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/sTvDelete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:simpleTitleView_PressTextColor="@color/white"
                app:simpleTitleView_DefaultTextColor="@color/white"
                app:simpleTitleView_image="@mipmap/ic_photo_details_delete"
                app:simpleTitleView_text="@string/text_delete" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

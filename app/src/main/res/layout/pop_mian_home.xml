<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/simpleText1"
                android:layout_marginTop="30dp"
                app:simpleTitleView_image="@drawable/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/simpleText4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:simpleTitleView_image="@drawable/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/simpleText2"
                android:layout_marginTop="30dp"
                app:simpleTitleView_image="@drawable/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/simpleText5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:simpleTitleView_image="@drawable/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/simpleText3"
                android:layout_marginTop="30dp"
                app:simpleTitleView_image="@drawable/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.cpigeon.book.widget.SimpleTitleView
                android:id="@+id/simpleText6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:simpleTitleView_image="@drawable/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>




</LinearLayout>
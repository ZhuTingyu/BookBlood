<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlLeft"
        android:layout_width="100dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/small_text_size_2"
            tools:text="2123321" />
    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/rlLeft" />

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/line"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.cpigeon.book.widget.ClickGetFocusEditText
            android:id="@+id/etRight"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="middle"
            android:singleLine="true"
            android:padding="8dp"
            android:textColorHint="@color/gray_m"
            android:textSize="@dimen/medium_text_size"
            tools:text="123333333333333333" />

        <ImageView
            android:id="@+id/imgRight"
            android:visibility="visible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_arrow" />
    </LinearLayout>


    <View
        android:id="@+id/line_division"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/llContent"
        android:background="@color/color_line" />

</RelativeLayout>

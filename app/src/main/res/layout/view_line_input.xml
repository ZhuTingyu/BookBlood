<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlLeft"
        android:layout_width="100dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvLeft"
            tools:text = "2123321"
            android:textSize="@dimen/small_text_size_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
    </RelativeLayout>



    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_toRightOf="@id/rlLeft"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_toRightOf="@+id/line"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cpigeon.book.widget.ClickGetFocusEditText
            android:id="@+id/etRight"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:textSize="@dimen/medium_text_size"
            android:background="@null"
            tools:text = "123333333333333333"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColorHint="@color/gray_m" />

        <ImageView
            android:id="@+id/imgRight"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
